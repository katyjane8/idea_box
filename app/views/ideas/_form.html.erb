
<div class="form">
  <!-- <h3>Create an Idea!</h3> -->
    <div class="field-wrap">
      <%= form_for [current_user, @idea] do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Idea Title*" %><br><br>

        <%= f.label :body %>
        <%= f.text_area :body, placeholder: "Idea*" %><br><br>

        <%= f.collection_select(:category_id, Category.all, :id, :title) %><br><br>

        <%= f.label :images %>
        <% if @idea.images.exists? %>
        <%= @images.each do |image| %>
        <%= image_tag image.image.url(:thumb) %>
            <% end %>
        <%= f.collection_check_boxes(:image_ids, Image.all, :id, :image_file_name) do |b| %>
        <%= b.label { b.check_box } %>
        <% end %>
        <% end %>

        <%= f.submit class: "sub-btn" %>
      <% end %>
    </div>
  </div>
